<div class="header bg-white border-bottom box-shadow">
    <div class="header-left">
        <a href="/" class="logo">Lunch Friends</a>
    </div>
    <ul class="header-right">
        {{#if user}}
        <li>
            <a class="header-btn header-login-btn" href="/logout">ログアウト</a>
        </li>
        {{else}}
        <li>
            <button type="button" class="header-btn header-login-btn" data-toggle="modal" data-target="#loginModal">ログイン</button>
        </li>
        <li>
            <button type="button" class="header-btn header-sign-up-btn" data-toggle="modal" data-target="#signupModal">登録</button>
        </li>
        {{/if}}
        <!-- Button trigger modal -->
        <li>
            <a class="header-btn header-twitter" href="https://twitter.com/@ingtaTsuya_0801" target="_blank">Twitterフォロー</a>
        </li>

        <li>
            <a class="header-btn header-twitter-icon" href="https://twitter.com/@ingtaTsuya_0801" target="_blank"><i class="fab fa-twitter"></i></a>
        </li>
    </ul>
</div>


<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="exampleModalLongTitle">Log In to Your LunchFriend Account!</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <a href="/auth/google" class="google-auth mb-4">
                    <img src="data:image/png;base64,">
                    Continue with Google
                </a>
                <a href="/auth/facebook" class="facebook-auth mb-4">
                    <img src="data:image/png;base64,">
                    Continue with facebook
                </a>
                {{#if Flag_Signin}}
                <script>loginModal()</script>
                <div class="alert alert-danger" role="alert">{{err}}</div>
                {{/if}}
                <form action="/login" method="post">
                    <input type="email" class="form-control mb-2" name="email" placeholder="Email" required>
                    <i class="fas fa-envelope errspan"></i>
                    <input type="password" class="form-control mb-2" name="password" placeholder="Password" required>
                    <i class="fas fa-lock errspan"></i>
                    <button type="submit" class="btn btn-primary btn-lg btn-block mb-3">Log in</button>
                </form>
                <div class="text-center forgot-Password">
                    <span>or</span>
                    <a href="#">Forgot Password</a>
                </div>
            </div>
            <div class="modal-footer">
                <div>

                    <span>Don't have an account? </span><a href="" data-toggle="modal" data-target="#signupModal" onclick="closeModal()">Sign up</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="exampleModalLongTitle">Create Your LunchFriend Account!</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{#if Flag_Signup}}
                <script>signupModal()</script>
                <div class="alert alert-danger" role="alert">{{err}}</div>
                {{/if}}
                <form action="/signup" method="post">
                    <input type="username" class="form-control mb-2" name="username" placeholder="Username" required>
                    <i class="fas fa-user errspan"></i>
                    <input type="number" class="form-control mb-2 col-md-4" name="age" placeholder="Age" required>
                    <i class="fas fa-user errspan"></i>
                    <input type="email" class="form-control mb-2" name="email" placeholder="Email" required>
                    <i class="fas fa-envelope errspan"></i>
                    <input type="password" class="form-control mb-2" name="password" placeholder="Password" required>
                    <i class="fas fa-lock errspan"></i>
                    <button type="submit" class="btn btn-danger btn-lg btn-block" onclick="closeModal()">Sign up</button>
                </form>
            </div>
            <div class="modal-footer">
                <div>
                    <span>Already have an account? </span><a href="" data-toggle="modal" data-target="#loginModal" onclick="closeModal()">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="finishModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="alert alert-primary" role="alert">
                    登録が完了しました
                </div>
            </div>
        </div>
    </div>
</div>
{{#if Flag_finish}}
<script>finishModal()</script>
{{/if}}