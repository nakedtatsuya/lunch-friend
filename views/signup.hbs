{{> _head}}
<div class="container">
    <div class="container-form">
        <h3 class="section-title">ユーザー登録</h3>
        <form class="form" novalidate="" action="/signin" method="post">
            {{message}}
            <div class="form-group col-md-8">
                <label for="username">ユーザーネーム</label>
                <input type="text" name="username" class="form-control" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="age">年齢</label>
                <input type="number" name="age" class="form-control" placeholder="" required>
            </div>
            <div class="form-group　col-md-8">
                <label for="email">メールアドレス</label>
                <input type="email" name="email" class="form-control" placeholder="" required>
            </div>
            <div class="form-group col-md-8">
                <label for="password">パスワード</label>
                <input type="password" name="password" class="form-control" placeholder="" required>
            </div>
            <button class="btn btn-primary btn-lg form-submit" type="submit">登録</button>
        </form>
    </div>
</div>
{{> _footer}}